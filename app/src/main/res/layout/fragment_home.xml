<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_acc"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR STATS"
                    android:textColor="@color/red_primary"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtCourseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Course: "
                    android:textColor="@color/grey_80"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtStats" />

                <TextView
                    android:id="@+id/txtCourseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/grey_80"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtCourseTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/txtCourseTitle"
                    app:layout_constraintTop_toTopOf="@+id/txtCourseTitle"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/txtYearTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Year: "
                    android:textColor="@color/grey_80"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtCourseTitle" />

                <TextView
                    android:id="@+id/txtYearValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/grey_80"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtYearTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/txtYearTitle"
                    app:layout_constraintTop_toTopOf="@+id/txtYearTitle"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/txtSemesterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Semester: "
                    android:textColor="@color/grey_80"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtYearTitle" />

                <TextView
                    android:id="@+id/txtSemesterValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/grey_80"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtSemesterTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/txtSemesterTitle"
                    app:layout_constraintTop_toTopOf="@+id/txtSemesterTitle"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/txtSubjectsEnrolledTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Subjects enrolled: "
                    android:textColor="@color/grey_80"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtSemesterTitle" />

                <TextView
                    android:id="@+id/txtSubjectsEnrolledValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/grey_80"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtSubjectsEnrolledTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/txtSubjectsEnrolledTitle"
                    app:layout_constraintTop_toTopOf="@+id/txtSubjectsEnrolledTitle"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/txtSemCompletion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="SEMESTER COMPLETION"
                    android:textColor="@color/red_primary"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtSubjectsEnrolledTitle" />

                <TextView
                    android:id="@+id/txtSemComplPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(%)"
                    android:textColor="@color/grey_60"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtSemCompletion"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.020"
                    app:layout_constraintStart_toEndOf="@+id/txtSemCompletion"
                    app:layout_constraintTop_toTopOf="@+id/txtSemCompletion"
                    app:layout_constraintVertical_bias="1.0" />

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/hBarChart"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtSemCompletion" />

                <TextView
                    android:id="@+id/txtBtDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/btDesc"
                    android:textColor="@color/grey_60"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hBarChart" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white_acc"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtAvgTardiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR VS AVERAGE TARDINESS"
                    android:textColor="@color/red_primary"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtAvgTardinessPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(%)"
                    android:textColor="@color/grey_60"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtAvgTardiness"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.020"
                    app:layout_constraintStart_toEndOf="@+id/txtAvgTardiness"
                    app:layout_constraintTop_toTopOf="@+id/txtAvgTardiness"
                    app:layout_constraintVertical_bias="1.0" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtAvgTardiness">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/pieChart2"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart2"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/pieChart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"

                    android:foregroundGravity="center|center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/rounded_circle_yellow"/>

                    <TextView
                        android:id="@+id/late"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LATE"
                        android:textSize="15sp"
                        android:textColor="@color/grey_80"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/rounded_circle_teal"
                        android:layout_marginLeft="5dp"

                        />

                    <TextView
                        android:id="@+id/early"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EARLY"
                        android:textSize="15sp"
                        android:textColor="@color/grey_80"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/rounded_circle_red"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/inTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IN TIME"
                        android:textSize="15sp"
                        android:textColor="@color/grey_80"
                        />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</layout>