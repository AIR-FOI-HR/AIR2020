<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AcademicLifestyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors. -->
        <item name="colorPrimary">@color/foi_red</item>
        <item name="colorPrimaryVariant">@color/foi_red</item>
        <item name="colorOnPrimary">@color/foi_red</item>
        <!-- background color. -->
        <item name="android:windowBackground">@color/grey_20</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AcademicLifestyle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AcademicLifestyle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AcademicLifestyle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Calendar View theme -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/foi_red</item>
        <item name="colorPrimary">@color/white_acc</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/grey_80</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white_acc</item>
    </style>

    <style name="MyEditTextStyle2" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/foi_red</item>
        <item name="colorControlNormal">@color/white_acc</item>
    </style>
</resources>